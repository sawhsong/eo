						<ui:icon id="icnFromDate" className="fa-calendar hor" title="#THIS_MENU_ID#.search.searchDateFrom"/>
						<div class="horGap20" style="padding:6px 8px 6px 0px;">-</div>
						<ui:text name="toDate" className="Ct hor" style="width:100px" checkName="#THIS_MENU_ID#.search.searchDateTo" option="date"/>
						<ui:icon id="icnToDate" className="fa-calendar hor" title="#THIS_MENU_ID#.search.searchDateTo"/>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<div id="divInformArea"></div>
<%/************************************************************************************************
