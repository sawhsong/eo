			<table class="tblDefault">
				<colgroup>
					<col width="50%"/>
					<col width="50%"/>
				</colgroup>
				<tr>
					<td class="tdDefault">
						<label for="searchType" class="lblEn hor"><mc:msg key="#THIS_MENU_ID#.search.searchType"/></label>
						<div style="float:left;padding-right:4px;">
							<ui:ccselect name="searchType" codeType="BOARD_SEARCH_TYPE" caption="==Select=="/>
